<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:id="@+id/home_scroll_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_main_cv"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/home_mainicon_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/logo_icon"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Spinner
                android:id="@+id/sort_item_spinner"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:spinnerMode="dropdown"
                android:layout_marginStart="20dp"
                android:background="@android:color/transparent"
                android:popupBackground="@android:color/transparent"
                android:textColor="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_mainicon_iv"/>


            <ImageView
                android:id="@+id/home_filter_icon_iv"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/item_clothes_sort"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_mainicon_iv"/>
            <TextView
                android:id="@+id/home_filter_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="필터"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="23dp"
                app:layout_constraintStart_toStartOf="@id/home_filter_icon_iv"
                app:layout_constraintTop_toTopOf="@id/home_filter_icon_iv"
                app:layout_constraintBottom_toBottomOf="@id/home_filter_icon_iv"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_trans_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                tools:listitem="@layout/item_trans"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/home_main_cv"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

    <ImageView
        android:id="@+id/home_make_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintVertical_bias="0.498"
        android:src="@drawable/shape"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/home_mypage_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/home_make_iv"
        app:layout_constraintEnd_toEndOf="@id/home_make_iv"
        android:layout_marginBottom="13dp"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintVertical_bias="0.498"
        android:src="@drawable/shape"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintStart_toStartOf="@id/home_mypage_iv"
        app:layout_constraintEnd_toEndOf="@id/home_mypage_iv"
        app:layout_constraintTop_toTopOf="@id/home_mypage_iv"
        app:layout_constraintBottom_toBottomOf="@id/home_mypage_iv"
        android:src="@drawable/ic_bottom_mypage"/>

</androidx.constraintlayout.widget.ConstraintLayout>