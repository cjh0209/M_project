<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransactionActivity"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/mypage_header"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/header_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_close"
            android:layout_margin="20dp"
            />

        <LinearLayout
            android:id="@+id/like_button_container"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/like_button"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="right"
                android:layout_margin="13dp"
                android:src="@drawable/ic_like_off" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="730dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:src="@drawable/test_img"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:background="@drawable/box_shape"/>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="헬로키티모자(헤어포함)"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:padding="8dp"
                        />



            </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2000로벅스"
                        android:textSize="23sp"
                        android:textStyle="bold"
                        android:padding="10dp"
                        />


                </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="글 내용입니다.글 내용입니다.글 내용입니다.글 내용입니다.글 내용입니다.글 내용입니다.글 내용입니다.글 내용입니다.글 내용입니다.글 내용입니다.글 내용입니다.글 내용입니다.글 내용입니다."
                    android:textSize="20sp"
                android:textStyle="bold"
                android:padding="10dp"
                />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/logo"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="닉네임입니다"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:padding="15dp"
                    />
            </LinearLayout>

            </LinearLayout>

    </ScrollView>




    <LinearLayout
        android:id="@+id/bottomTransaction"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/button_radius"

        >
        <!--android:layout_above="@id/bottomNavigationView" -->


        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="구매하기"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:padding="5dp"
            android:textAlignment="center"
            android:layout_marginTop="-5dp"
            />

    </LinearLayout>


</LinearLayout>